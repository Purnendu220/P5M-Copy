<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ClassIconSmall">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="ClassIconSmaller">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ClassIconMedium">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CardViewTheme" parent="CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="CardViewCircularProfileSmallest" parent="CardViewTheme">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>

    </style>
    <style name="CardViewCircularProfileSmall" parent="CardViewTheme">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="CardViewCircularProfile" parent="CardViewTheme">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="cardCornerRadius">24dp</item>
    </style>

    <style name="CardViewProfileSmall" parent="CardViewTheme">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="ToolBarTitle" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolBarButton" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextListHeaderTap" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/theme_medium_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ToolBarIcon">
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">@dimen/tool_bar_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


</resources>
