<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/float_transparent">

    <android.support.v7.widget.CardView
        style="@style/CardViewFilterTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLeft"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/class_icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:letterSpacing="@dimen/text_medium_letter_spacing"
                android:lineSpacingExtra="@dimen/line_spacing_extra"
                android:maxLines="1"
                android:text="Varun John"
                android:textColor="@color/theme_medium_text"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:id="@+id/imageRight"
                android:layout_width="32dp"
                android:padding="6dp"
                android:clickable="true"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/filter_cancel" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>