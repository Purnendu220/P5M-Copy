<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/layoutScheduler"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_14"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_14"
    android:layout_marginBottom="@dimen/margin_1"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:padding="@dimen/margin_5"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewClassName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Class Name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTrainerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Trainer Name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewClassName"
        app:layout_constraintTop_toBottomOf="@+id/textViewClassName" />

    <TextView
        android:id="@+id/textViewClassTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        android:text="9:10am - 10:00am"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewClassName"
        app:layout_constraintTop_toBottomOf="@+id/textViewTrainerName" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>