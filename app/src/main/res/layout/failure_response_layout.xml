<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutNoData"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:gravity="center"
    android:weightSum="3.0"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/imageViewEmptyLayoutImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:layout_weight="3.0"
        android:scaleType="fitCenter"
        android:src="@drawable/stub_class" />

    <TextView
        android:id="@+id/textViewEmptyLayoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewClass"
        android:ellipsize="end"
        android:padding="@dimen/margin_50"
        android:fontFamily="sans-serif"
        android:gravity="top|center_horizontal"
        android:lineSpacingExtra="@dimen/line_spacing_extra"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Response is lost please try again"
        android:textColor="@color/theme_medium_dark_text"
        android:textSize="@dimen/text_large" />
<Button
    android:id="@+id/buttonTryAgain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/theme_book"
    android:textColor="@color/white"
    android:text="@string/please_try_again"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_150"
    />
</LinearLayout>