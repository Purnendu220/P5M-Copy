<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_bg_splash"
    tools:context="www.gymhop.p5m.www.gymhop.me.view.activity.Splash">

    <ImageView
        android:id="@+id/imageViewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="108dp"
        android:layout_marginBottom="88dp"
        android:src="@drawable/splash_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageViewImage"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/powered_by"
            android:layout_marginBottom="@dimen/margin_15"
            />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageViewChevroletLogo"
              android:layout_width="@dimen/margin_70"
              android:layout_height="@dimen/margin_30"
              android:layout_centerInParent="true"
              android:src="@drawable/chevrolet_logo" />
          <View
              android:layout_width="@dimen/margin_2"
              android:layout_height="@dimen/margin_20"
              android:layout_marginLeft="@dimen/margin_10"
              android:layout_marginRight="@dimen/margin_10"
              android:background="@color/white"
              >

          </View>

          <ImageView
              android:id="@+id/imageViewAlghnimLogo"
              android:layout_width="@dimen/margin_70"
              android:layout_height="@dimen/margin_30"
              android:layout_centerInParent="true"
              android:src="@drawable/alghanim_logo" />
      </LinearLayout>



    </LinearLayout>



</android.support.constraint.ConstraintLayout>
