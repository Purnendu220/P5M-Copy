<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:fitsSystemWindows="true"
    tools:context="www.gymhop.p5m.www.gymhop.me.view.activity.Main.ClassProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:background="?attr/colorPrimary"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:elevation="4dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="enterAlways|scroll"
            app:tabIndicatorColor="@color/date_tabs" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_separator_size"
                        android:background="@color/theme_bg"
                        android:elevation="@dimen/view_separator_elevation"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <FrameLayout
                                    android:id="@+id/layoutImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:elevation="2dp">

                                    <ImageView
                                        android:id="@+id/imageViewClass"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/class_holder"
                                        android:transitionName="profile"
                                        />

                                    <TextView
                                        android:id="@+id/textViewSpecialClass"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:background="@color/specialClassBg"
                                        android:ellipsize="end"
                                        android:fontFamily="sans-serif"
                                        android:gravity="left"
                                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                                        android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                                        android:maxLines="1"
                                        android:paddingLeft="16dp"
                                        android:paddingTop="8dp"
                                        android:paddingRight="120dp"
                                        android:paddingBottom="8dp"
                                        android:text="@string/special_class"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_medium"
                                        android:visibility="visible"
                                        android:transitionName="specialClass"


                                        />

                                    <LinearLayout
                                        android:id="@+id/linearLayoutClassRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="14dp"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="@dimen/margin_80"
                                            android:layout_height="@dimen/margin_40"
                                            android:layout_gravity="top|left"
                                            android:layout_margin="2dp"
                                            android:background="@drawable/bg_rounded_semi_transparent"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textViewClassRating"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="sans-serif"
                                                android:letterSpacing="0.12"
                                                android:text="3.0"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/text_extra_large"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="sans-serif"
                                                android:letterSpacing="0.12"
                                                android:text="/5"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/text_medium" />

                                        </LinearLayout>
                                    </LinearLayout>
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/textViewClassName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/layoutImage"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_toStartOf="@+id/buttonJoin"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                                    android:maxLines="2"
                                    android:padding="12dp"
                                    android:text="Name of the Class"
                                    android:textAllCaps="true"
                                    android:textColor="@color/theme_dark_text"
                                    android:textSize="@dimen/text_title"
                                    android:textStyle="bold"
                                    android:transitionName="className"


                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewClassCategory"
                                    style="@style/ClassIconSmall"
                                    android:src="@drawable/class_icon" />

                                <TextView
                                    android:id="@+id/textViewClassCategory"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="@dimen/text_icon_gap"
                                    android:layout_marginTop="@dimen/text_drawable_adjustment"
                                    android:layout_toEndOf="@+id/imageViewClassCategory"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra"
                                    android:text="Class A: fitness, strength training and cardio"
                                    android:textColor="@color/theme_dark_text"
                                    android:textSize="@dimen/text_medium"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginBottom="12dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewClassDate"
                                    style="@style/ClassIconSmall"
                                    android:src="@drawable/calendar" />

                                <TextView
                                    android:id="@+id/textViewClassDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="@dimen/text_icon_gap"
                                    android:layout_marginTop="@dimen/text_drawable_adjustment"
                                    android:layout_toEndOf="@+id/imageViewClassDate"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra"
                                    android:text="January 11, 2018"
                                    android:textColor="@color/theme_dark_text"
                                    android:textSize="@dimen/text_medium"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginBottom="12dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewClassAvailable"
                                    style="@style/ClassIconSmall"
                                    android:src="@drawable/profile_icon" />

                                <TextView
                                    android:id="@+id/textViewAvailable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="@dimen/text_icon_gap"
                                    android:layout_marginTop="@dimen/text_drawable_adjustment"
                                    android:layout_toEndOf="@+id/imageViewClassAvailable"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra"
                                    android:text="6 available seats"
                                    android:textColor="@color/theme_dark_text"
                                    android:textSize="@dimen/text_medium"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutFitnessLevel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginBottom="12dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/imageViewClassFitnessLevel"
                                    style="@style/ClassIconSmall"
                                    android:src="@drawable/class_level_get" />

                                <TextView
                                    android:id="@+id/textViewFitnessLevel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="@dimen/text_icon_gap"
                                    android:layout_marginTop="@dimen/text_drawable_adjustment"
                                    android:layout_toEndOf="@+id/imageViewClassFitnessLevel"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra"
                                    android:text="Intermidieate"
                                    android:textColor="@color/theme_dark_text"
                                    android:textSize="@dimen/text_medium"
                                    android:textStyle="normal" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_separator_size"
                        android:background="@color/theme_bg"
                        android:elevation="@dimen/view_separator_elevation"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="4dp">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="6dp">

                                    <ImageView
                                        android:id="@+id/imageViewClassTime"
                                        style="@style/ClassIconMedium"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:clickable="true"
                                        android:src="@drawable/time" />

                                    <TextView
                                        android:id="@+id/textViewTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageViewClassTime"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="sans-serif-medium"
                                        android:gravity="center"
                                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                                        android:lineSpacingExtra="@dimen/line_spacing_extra"
                                        android:paddingTop="2dp"
                                        android:text="  11:20AM - 12:50AM"
                                        android:textColor="@color/theme_dark_text"
                                        android:textSize="@dimen/text_small" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/layoutLocation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:orientation="vertical"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp">

                                    <ImageView
                                        android:id="@+id/imageViewClassLocation"
                                        style="@style/ClassIconMedium"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/location" />

                                    <TextView
                                        android:id="@+id/textViewLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageViewClassLocation"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="sans-serif-medium"
                                        android:gravity="center"
                                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                                        android:lineSpacingExtra="@dimen/line_spacing_extra"
                                        android:paddingTop="2dp"
                                        android:text="Noida Sector 132"
                                        android:textColor="@color/theme_dark_text"
                                        android:textSize="@dimen/text_small" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="12dp">

                                    <ImageView
                                        android:id="@+id/imageViewClassGender"
                                        style="@style/ClassIconMedium"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/gender" />

                                    <TextView
                                        android:id="@+id/textViewGender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageViewClassGender"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="sans-serif-medium"
                                        android:gravity="center"
                                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                                        android:lineSpacingExtra="@dimen/line_spacing_extra"
                                        android:paddingTop="2dp"
                                        android:text="Only girls"
                                        android:textColor="@color/theme_dark_text"
                                        android:textSize="@dimen/text_small" />

                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutTrainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/click_highlight"
                                android:clickable="true"
                                android:clipToPadding="false"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="10dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="10dp">

                                <android.support.v7.widget.CardView style="@style/CardViewCircularProfileSmall">

                                    <ImageView
                                        android:id="@+id/imageViewTrainerProfile"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/profile_holder" />
                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:id="@+id/textViewTrainerName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="12dp"
                                    android:layout_toEndOf="@+id/imageViewClassCategory"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra"
                                    android:text="Varun John"
                                    android:textColor="@color/theme_dark_text"
                                    android:textSize="@dimen/text_medium" />

                                <ImageView
                                    style="@style/ClassIconSmall"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:src="@drawable/arrow_right" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayoutStudioRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_separator_size"
                        android:background="@color/theme_bg"
                        android:elevation="@dimen/view_separator_elevation"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/textViewStudioRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                                    android:maxLines="2"
                                    android:padding="12dp"
                                    android:text="@string/studio_rating"
                                    android:textAllCaps="true"
                                    android:textColor="@color/theme_dark_text"
                                    android:textSize="@dimen/text_title"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_12"
                                    android:orientation="horizontal">

                                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                        android:id="@+id/studioRating"
                                        style="@style/Widget.MaterialRatingBar.RatingBar"
                                        android:layout_width="100dp"
                                        android:layout_height="20dp"
                                        app:mrb_progressTint="@color/rating_filled"
                                        app:mrb_secondaryProgressTint="@color/rating_filled" />

                                    <TextView
                                        android:id="@+id/textViewRatingCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:fontFamily="sans-serif-medium"
                                        android:text=""
                                        android:textColor="@color/theme_dark_light_text"
                                        android:textSize="@dimen/text_medium" />

                                    <TextView
                                        android:id="@+id/textViewReviewCountText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_4"
                                        android:fontFamily="sans-serif"
                                        android:text=""
                                        android:textColor="@color/theme_dark_light_text"
                                        android:textSize="@dimen/text_small"

                                        />


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:background="@color/grey_line_dark">

                                </View>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/layoutSeeAllReview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/click_highlight"
                                android:clickable="true"
                                android:clipToPadding="false"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="10dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="10dp">


                                <TextView
                                    android:id="@+id/textViewSeeAll"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_toEndOf="@+id/imageViewClassCategory"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="left"
                                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                                    android:lineSpacingExtra="@dimen/line_spacing_extra"
                                    android:text="@string/see_all_reviews"
                                    android:textColor="@color/theme_accent_text"
                                    android:textSize="@dimen/text_medium" />

                                <ImageView
                                    style="@style/ClassIconSmall"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:src="@drawable/arrow_right"
                                    android:tint="@color/theme_accent_text" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layoutDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_separator_size"
                        android:background="@color/theme_bg"
                        android:elevation="@dimen/view_separator_elevation"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:letterSpacing="@dimen/text_medium_letter_spacing"
                                android:lineSpacingExtra="@dimen/line_spacing_extra"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textColor="@color/theme_medium_dark_text"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_separator_size"
                        android:background="@color/theme_bg"
                        android:elevation="@dimen/view_separator_elevation"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewMap"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:letterSpacing="@dimen/text_medium_letter_spacing"
                                android:lineSpacingExtra="@dimen/line_spacing_extra"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textColor="@color/theme_medium_dark_text"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="normal" />

                            <FrameLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp">

                                <com.p5m.me.view.activity.custom.SquareImageView
                                    android:id="@+id/imageViewMap"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/no_map"
                                    android:clickable="true"
                                    android:scaleType="centerCrop" />

                                <FrameLayout
                                    android:id="@+id/layoutMapClick"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/click_highlight"
                                    android:clickable="true" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMoreDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_separator_size"
                        android:background="@color/theme_bg"
                        android:elevation="@dimen/view_separator_elevation"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewMoreDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:letterSpacing="@dimen/text_medium_letter_spacing"
                                android:lineSpacingExtra="@dimen/line_spacing_extra"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textColor="@color/theme_medium_dark_text"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_shadow_dark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textViewBook"
                android:layout_width="0dp"
                android:layout_height="@dimen/bottom_text_button_height"
                android:background="@drawable/theme_bottom_text_button_book"
                android:clickable="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="@dimen/button_letter_spacing"
                android:text="@string/reserve_class"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/textViewBookWithFriend"
                android:layout_width="0dp"
                android:layout_height="@dimen/bottom_text_button_height"
                android:background="@drawable/theme_bottom_text_button_book"
                android:clickable="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="@dimen/button_letter_spacing"
                android:text="@string/reserve_class_with_friend"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_5"
                android:visibility="visible"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
