<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/float_transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_popup"
        >
        <LinearLayout
            android:id="@+id/linearlayoutTopPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center"
                android:text="@string/processing_payment"
                android:textColor="@color/black"
                android:textSize="@dimen/text_extra_large"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_5"
                android:orientation="vertical"
                android:id="@+id/processing_layout"
                android:visibility="gone"

                >
                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyle"
                    android:progressDrawable="@drawable/prograssbar_circular"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_50"
                    android:layout_gravity="center"

                    />
                <TextView
                    android:id="@+id/textViewAtGymClassesCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/please_wait"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginEnd="@dimen/margin_15"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/confirmation_layout"
                >

                <ImageView
                    android:id="@+id/imageViewPaymentStatus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/success"
                    />

                <TextView
                    android:id="@+id/textViewPaymentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:letterSpacing="@dimen/text_medium_letter_spacing"
                    android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                    android:text="Package Extended Successfully"
                    android:textColor="@color/green"
                    android:textSize="@dimen/button_text_medium"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_5"

                    />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayoutTopPart"
            android:background="@color/white"
            android:visibility="gone"



            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/margin_15"
                >

                <TextView
                    android:id="@+id/textViewOk"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_normal"
                    android:background="@drawable/join_rect"
                    android:clickable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:letterSpacing="@dimen/button_letter_spacing"
                    android:text="@string/got_it"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/white"
                    android:layout_weight="1"

                    />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
