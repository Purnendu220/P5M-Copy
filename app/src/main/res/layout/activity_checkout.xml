                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:paddingBottom="16dp"
                            android:text="Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSpecialClassDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/validityUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text="1 Class"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_extra_large"
                            android:textStyle="normal" />


                            <TextView
                                android:id="@+id/textViewPackageValidityExtend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:letterSpacing="@dimen/text_medium_letter_spacing"
                                android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                                android:maxLines="1"
                                android:paddingBottom="12dp"
                                android:text="Valid for 2 Weeks"
                                android:textColor="@color/theme_dark_text"
                                android:textSize="@dimen/text_large"
                                android:textStyle="normal"
                                android:visibility="gone" />


                        <TextView
                            android:id="@+id/textViewCancellationPolicyToggle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra"
                            android:text="@string/cancellation_policy"
                            android:textColor="@color/theme_accent_text"
                            android:textSize="@dimen/text_large"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textViewCancellationPolicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:paddingBottom="16dp"
                            android:text="Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutBookForFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewPackageImageBWF"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="12dp"
                            android:src="@drawable/set_icon" />

                        <TextView
                            android:id="@+id/textViewPackageNameBWF"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:text="1X DROP IN "
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_extra_large" />

                        <TextView
                            android:id="@+id/textViewPriceBWF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:text="7 KWD"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSpecialClassDetailsBWF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="64dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/validityUnitBWF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text="1 Class"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_extra_large"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/textViewPackageValidityExtendBWF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text="Valid for P5M Studio"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_large"
                            android:textStyle="normal"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textViewPackageExtendNoOfClassBWF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text=" + 6 days"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_large"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textViewCancellationPolicyToggleBWF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra"
                            android:text="@string/cancellation_policy"
                            android:textColor="@color/theme_accent_text"
                            android:textSize="@dimen/text_large"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textViewCancellationPolicyBWF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:paddingBottom="16dp"
                            android:text="Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio"
                            android:textColor="@color/theme_dark_text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/view_padding_setting"
                    android:layout_marginRight="@dimen/view_padding_setting"
                    android:background="@color/separator" />

                <LinearLayout
                    android:id="@+id/layoutPromoCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/view_padding_edit_profile">

                        <TextView
                            android:id="@+id/textViewPromoCodeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/view_padding_edit_profile"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:text="@string/promo_code_applied"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_large"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/textViewPromoCodePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:text="- 2 KWD"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <View
