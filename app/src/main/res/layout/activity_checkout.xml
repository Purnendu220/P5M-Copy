<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    tools:context="www.gymhop.p5m.www.gymhop.me.view.activity.Main.CheckoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:background="@color/colorPrimaryDark"
            android:elevation="@dimen/action_bar_elevation"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewBack"
                style="@style/ToolBarIcon"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textViewTitle"
                style="@style/ToolBarTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/checkout"
                android:textColor="@color/white" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/textViewTopTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="left"
                    android:text="@string/your_order_details"
                    android:textColor="@color/theme_dark_text"
                    android:textSize="@dimen/registration_title"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewPackageImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="12dp"
                        android:src="@drawable/set_icon" />

                    <TextView
                        android:id="@+id/textViewPackageName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                        android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:text="1X DROP IN "
                        android:textColor="@color/theme_dark_text"
                        android:textSize="@dimen/text_extra_large" />

                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                        android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:text="7 KWD"
                        android:textColor="@color/theme_dark_text"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutNormalClassDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textViewPackageClasses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text="1 Class"
                            android:textColor="@color/theme_light_text"
                            android:textSize="@dimen/text_extra_large"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/textViewPackageValidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text="Valid for P5M Studio"
                            android:textColor="@color/theme_light_text"
                            android:textSize="@dimen/text_large"
                            android:textStyle="normal"
                            />

                        <TextView
                            android:id="@+id/textViewPackageInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:paddingBottom="16dp"
                            android:text="Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio"
                            android:textColor="@color/theme_light_text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/textViewLimit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra"
                            android:text="@string/view_gym_visit_limits"
                            android:textColor="@color/theme_accent_text"
                            android:textSize="@dimen/text_large"
                            android:visibility="visible" />
                        <TextView
                            android:id="@+id/textViewCancellationPolicyGeneralToggle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra"
                            android:text="@string/cancellation_policy"
                            android:textColor="@color/theme_accent_text"
                            android:textSize="@dimen/text_large"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textViewCancellationPolicyGenral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:paddingBottom="16dp"
                            android:text="Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio"
                            android:textColor="@color/theme_light_text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSpecialClassDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/validityUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text="1 Class"
                            android:textColor="@color/theme_light_text"
                            android:textSize="@dimen/text_extra_large"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/textViewPackageValidityExtend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:text="Valid for P5M Studio"
                            android:textColor="@color/theme_light_text"
                            android:textSize="@dimen/text_large"
                            android:textStyle="normal"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/textViewCancellationPolicyToggle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra"
                            android:text="@string/cancellation_policy"
                            android:textColor="@color/theme_accent_text"
                            android:textSize="@dimen/text_large"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textViewCancellationPolicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
                            android:paddingBottom="16dp"
                            android:text="Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio Valid for P5M Studio"
                            android:textColor="@color/theme_light_text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/view_padding_setting"
                    android:layout_marginRight="@dimen/view_padding_setting"
                    android:background="@color/separator" />

                <LinearLayout
                    android:id="@+id/layoutPromoCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/view_padding_edit_profile">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/view_padding_edit_profile"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:text="Promo Code Applied"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_large"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/textViewPromoCodePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:letterSpacing="@dimen/text_medium_letter_spacing"
                            android:text="- 2 KWD"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/view_padding_setting"
                        android:layout_marginRight="@dimen/view_padding_setting"
                        android:background="@color/separator" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/view_padding_edit_profile">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/view_padding_edit_profile"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                        android:text="Total : "
                        android:textColor="@color/theme_dark_light_text"
                        android:textSize="@dimen/text_large"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textViewTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:letterSpacing="@dimen/text_medium_letter_spacing"
                        android:text="12 KWD"
                        android:textColor="@color/theme_dark_text"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/view_padding_setting"
                    android:layout_marginRight="@dimen/view_padding_setting"
                    android:background="@color/separator" />

                <Button
                    android:id="@+id/buttonPromoCode"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_normal"
                    android:layout_gravity="right"
                    android:layout_margin="16dp"
                    android:background="@drawable/button_promo_code"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/apply_promo_code"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="-4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/bg_shadow_dark" />

            <TextView
                android:id="@+id/textViewPay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_text_button_height"
                android:background="@drawable/theme_bottom_text_button_book"
                android:clickable="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="@dimen/button_letter_spacing"
                android:text="Pay"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
