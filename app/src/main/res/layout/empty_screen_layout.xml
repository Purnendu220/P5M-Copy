<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutNoData"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:gravity="center"
    android:weightSum="3"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/imageViewEmptyLayoutImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.5"
        android:scaleType="fitCenter"
        android:src="@drawable/stub_check" />

    <TextView
        android:id="@+id/textViewEmptyLayoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewClass"
        android:layout_toStartOf="@+id/buttonJoin"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="top|center_horizontal"
        android:lineSpacingExtra="@dimen/line_spacing_extra"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Varun John"
        android:textColor="@color/theme_medium_dark_text"
        android:textSize="@dimen/text_large" />
    <Button
        android:id="@+id/buttonBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reserve_class"
        android:layout_margin="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
android:visibility="gone"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"

        />

</LinearLayout>