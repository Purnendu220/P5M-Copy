<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="false"
        android:elevation="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewClassName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="@dimen/line_spacing_extra_title"
            android:maxLines="2"
            android:padding="12dp"
            android:text="@string/upcoming_classes"
            android:textColor="@color/theme_accent_text"
            android:textSize="@dimen/text_list_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg"
            android:clipToPadding="false"
            android:orientation="vertical" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>