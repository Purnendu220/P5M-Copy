<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/float_transparent"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/linearlayoutTopPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Feedback Form"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_16" />


        <TextView
            android:id="@+id/textViewSubHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/margin_20"
            android:gravity="center"
            android:text="@string/feedback_header"
            android:textColor="@color/black"
            android:textSize="@dimen/text_extra_large" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:spinnerMode="dropdown" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:background="@color/grey_line" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="left"
            android:padding="@dimen/margin_5"
            android:visibility="visible">

            <EditText
                android:id="@+id/textViewCountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:hint="@string/Comment"
                android:inputType="textCapSentences"
                android:maxLines="3"
                android:textSize="@dimen/text_large" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutRatePast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayoutTopPart"
        android:background="@color/white"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_15"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewNoThanks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_text_button_height"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/theme_bottom_text_button_light_grey"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="@dimen/button_letter_spacing"
                android:text="@string/no_thanks"
                android:textAllCaps="true"
                android:textColor="@color/rating_blank"
                android:textSize="@dimen/text_small"

                />

            <TextView
                android:id="@+id/textViewCancelBooking"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_text_button_height"
                android:layout_weight="1"
                android:background="@drawable/theme_bottom_text_button_book"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="@dimen/button_letter_spacing"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"

                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

